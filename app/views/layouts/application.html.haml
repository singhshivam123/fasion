!!!
%html{lang: "en"}
  %head
    %title= @seo.title
    %meta{content: "text/html; charset=UTF-8", "http-equiv": "Content-Type"}/
    %meta{charset: "UTF-8"}/
    %meta{content: @seo.discription, name: "description"}/
    %meta{content: @seo.keyword, name: "keywords"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %link{href: (asset_path "theme_a/img/favicon.ico"), rel: "shortcut icon"}/
    = csrf_meta_tags
    = csp_meta_tag
    %link{href: "https://fonts.googleapis.com/css?family=Josefin+Sans:300,300i,400,400i,700,700i", rel: "stylesheet"}/
    %link{href: "//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css", rel: "stylesheet"}/
    = stylesheet_link_tag "#{@company.theme}", media: 'all'
  %body
    - if @company.theme == 'theme_a'
      #preloder
        .loader
    = render "#{@company.theme}/header"
    = yield
    = render "#{@company.theme}/footer"
    = javascript_include_tag "#{@company.theme}"
    = render 'layouts/notify'
    = yield :javascript
